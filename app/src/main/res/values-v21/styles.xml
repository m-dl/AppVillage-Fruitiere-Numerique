<resources>
    <!-- the theme applied to the application or activity -->
    <style name="CustomActionBarTheme"
        parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:colorPrimary">@color/main_theme</item>
        <item name="android:colorPrimaryDark">@color/main_theme</item>
        <item name="android:statusBarColor">@color/main_theme_dark</item>
        <item name="android:textColorPrimary">@android:color/white</item>

    </style>


    <!--<item name="android:background">@color/main_theme</item>-->
    <!--<item name="displayOptions">showHome</item>-->



    <style name="nowCardStyle" parent="android:Widget.TextView">
        <item name="android:background">@drawable/search_bg_shadow</item>
        <item name="android:gravity">center</item>
        <item name="android:minHeight">200dp</item>
        <item name="android:minWidth">200dp</item>
        <item name="android:textColor">#707070</item>
    </style>

    <style name="textBackground">
        <item name="android:textColor">#ffffffff</item>
        <item name="android:textSize">60dp</item>
        <item name="android:shadowColor">#000000</item>
        <item name="android:shadowDx">100</item>
        <item name="android:shadowDy">100</item>
        <item name="android:shadowRadius">100</item>
    </style>

</resources>
