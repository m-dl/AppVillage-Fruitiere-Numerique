<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/placeMainPhoto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.CardView
        android:layout_width="@dimen/mediaCardWidth"
        android:layout_height="@dimen/mediaCardHeight"
        app:cardCornerRadius="4dp"
        app:cardElevation="4dp"
        android:layout_marginBottom="@dimen/cardMarginVertical"
        android:layout_marginLeft="@dimen/cardMarginHorizontal"
        android:layout_marginRight="@dimen/cardMarginHorizontal"
        android:layout_marginTop="@dimen/cardMarginVertical"
        android:clickable="true"
        app:cardUseCompatPadding="true"
        app:cardPreventCornerOverlap="false"
        android:onClick="onClickPhoto"
        app:contentPadding="0dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/placeMainImageImageView"
                android:layout_width="wrap_content"
                android:layout_height="175dp"
                android:scaleType="fitXY"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true"
                android:contentDescription="@string/image"
                android:src="@drawable/chargement"/>

            <TextView
                android:id="@+id/placeMainImageTextView"
                android:textSize="24sp"
                android:textStyle="bold"
                android:transitionName="@string/TitleTransition"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:text="@string/photo_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            </RelativeLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>