<resources>
    <!-- the theme applied to the application or activity -->
    <style name="CustomActionBarTheme"
        parent="@android:style/Theme.Holo.Light.DarkActionBar">
        <item name="android:actionBarStyle">@style/MyActionBar</item>
    </style>

    <!-- ActionBar styles -->
    <style name="MyActionBar"
        parent="@android:style/Widget.Holo.Light.ActionBar.Solid.Inverse">
        <item name="android:background">@color/main_theme</item>
    </style>


    <style name="nowCardStyle" parent="android:Widget.TextView">
        <item name="android:background">@drawable/search_bg_shadow</item>
        <item name="android:gravity">center</item>
        <item name="android:minHeight">200dp</item>
        <item name="android:minWidth">200dp</item>
        <item name="android:textColor">#707070</item>
    </style>

    <style name="textBackground">
        <item name="android:textColor">#ffffffff</item>
        <item name="android:textSize">60dp</item>
        <item name="android:shadowColor">#000000</item>
        <item name="android:shadowDx">100</item>
        <item name="android:shadowDy">100</item>
        <item name="android:shadowRadius">100</item>
    </style>

</resources>
